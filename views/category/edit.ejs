<!-- views/category/edit -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><% title %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <%- include('../partials/navbar', {links: links}) %>
    <div>
      <%- include('../partials/topbar', {date: date}) %>
      <h1 class="page-header">Edit Category</h1>
      <%- include("errors") %>
      <form action="/categories/category/editConfirm" method="post">
        <input type="hidden" name="categoryId" value="<%= category.id %>">
        <label for="productName">Category Name:</label>
        <input
          type="text"
          id="categoryName"
          name="categoryName"
          value="<%= category.category_name %>"
          required
        />
        
        <label for="imageUrl">Image URL (optional):</label>
        <input
          type="url"
          id="imageUrl"
          name="imageUrl"
          value="<%= category.image_url %>"
        />
        <button type="submit" class="add-button">Confirm</button>
        
      </form>
      <form action="/categories/delete/<%= category.id %>" method="POST">
       <button type="submit"  onclick="return confirm('Are you sure you want to delete this category?');">Delete</button>
      </form>

      <a href="/categories" class="back-btn">Back</a>
      <h2 class="page-header">Products: </h2>
      <%- include('../partials/productsDisplay') %>
    </div>
  </body>
</html>
